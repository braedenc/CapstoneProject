@model Vacay.Models.TravelJournalViewModels
@{
    ViewBag.Title = "MyTravelJournal";
}

<h2>MyTravelJournal</h2>
<br />

@using (Html.BeginForm("Post", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <h4>Add a Journal Entry</h4>
    @Html.AntiForgeryToken()
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Location, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Location, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.City, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.City, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Post, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Post, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Post" />
        </div>
    </div>
}
<br/>
<div class="row">
    <div class="col-lg-12">
        <h4>
            My Journal Entries

        </h4>
    </div>
</div>
<br/>
@foreach (var post in Model.Posts)
{
    <div class="row">
        <div class="col-md-4">
            <a href="#">
                <img class="img-responsive" src="http://placehold.it/700x300" alt="">
            </a>
        </div>
        <div class="col-md-6">
            <h4>@post.Username</h4>
            <h6>@post.Date</h6>
            <h3>@post.Location | <small>@post.City</small></h3>
            <p>@post.Post</p>

        </div>
        <div class="col-md-2">
            <a class="btn btn-primary" href="#">Read More <span class="glyphicon glyphicon-chevron-right"></span></a>
        </div>
    </div>
            <br />
            <br />
}

