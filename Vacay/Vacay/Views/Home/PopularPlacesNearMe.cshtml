@model Vacay.Models.PopularPlacesViewModel
@{
    ViewBag.Title = "MyTravelJournal";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Popular Places Near Me
           
        </h1>
    </div>
</div>
<br />
        @foreach (var post in Model.Posts)
        {
            <div class="row">
                <div class="col-md-5">
                    <a href="#">
                        <img class="img-responsive" src="http://placehold.it/700x300" alt="">
                    </a>
                </div>
                <div class="col-md-7">
                    <h4>@post.Username</h4>
                    <h3>@post.Location | <small>@post.City</small></h3>
                    <p>@post.Post</p>
                    <a class="btn btn-primary" href="#">Read More <span class="glyphicon glyphicon-chevron-right"></span></a>
                </div>
            </div>
            <br />
            <br />
        }



